template(name='Dashboard')
	h1 Центр управления полетами
	+unclassifiedTickets
	+majorTickets
	+myTickets
	+Incidents
	+ServiceRequests
	+Rfcs
	+contentFor('navbar')
		span.element
			a(href='/tickets/new')
				i.icon-file
				| Создать
template(name='myTickets')
	h2 Мои тикеты
	table.table
		each tickets
			+ticketWithSla
template(name='unclassifiedTickets')
	h2 Неклассифицированные тикеты
	table.table
		each tickets
			tr
				td #{employee.name} из #{employee.client.name}
				td 
					a(href="/tickets/#{_id}") #{description}
				td
					span(data-livestamp=createdAt)

template(name='Incidents')
	h2 Инциденты
	table.table
		each tickets
			+ticketWithSla

template(name='majorTickets')
	h2 Массовые инциденты
	table.table
		each tickets
			+ticketWithSla

template(name='ServiceRequests')
	if tickets
		h2 Запросы на обслуживание
		table.table
			each tickets
				+ticketWithSla

template(name='Rfcs')
	if tickets
		h2 Запросы на изменение
		table.table
			each tickets
				+ticketWithSla

template(name='ticketWithSla')
	tr
		td 
			if is_major
				i.icon-fire.fg-red
			i(class=ticket_icon)
			| #{doc_id}
			if reclassified
				i.icon-cycle.fg-red(title='реклассифицирован')
		td #{employee.name} из #{employee.client.name}
		td 
			a(href="/tickets/#{_id}") #{description}
		td 
			if respondedAt
				if response_breached
					i.icon-mobile.fg-red
			else
				| {{to_duration response_duration_left}}
				if response_breached
					i.icon-mobile.fg-red
				else
					i.icon-mobile
				
			unless resolvedAt
				| {{to_duration resolve_duration_left}} ({{resolve_percent}}%)
				if resolve_breached
					i.icon-shit.fg-red
		td(class=status_class) #{status_locale}
		td
			span(data-livestamp=createdAt) #{createdAt}